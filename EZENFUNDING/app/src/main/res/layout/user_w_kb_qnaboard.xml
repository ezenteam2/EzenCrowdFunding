<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:background="@drawable/kb_header_nonclick"
            android:id="@+id/moveNoctice"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Q n A"
            android:background="@drawable/kb_header_clicked"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q n A"
        android:textSize="15pt"
        android:textAlignment="center"
        android:layout_marginTop="80dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <TableRow
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/table_border"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="글번호"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답변여부"
                android:layout_marginLeft="20dp"/>
        </TableRow>
        <TableRow
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/table_border"
            android:id="@+id/moveQnAContent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3300025"
                android:textSize="7pt"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="투자하고 리워드하고..."
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EZENSH"
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답변완료"
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>

        </TableRow>
        <TableRow
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/table_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3300026"
                android:textSize="7pt"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예치금 조회가 안돼요"
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EZENYS"
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미답변"
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>

        </TableRow>
        <TableRow
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/table_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3300027"
                android:textSize="7pt"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제가 안돼요"
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EZENHJ"
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미답변"
                android:layout_marginLeft="15dp"
                android:textSize="7pt"/>

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="등록"
            android:id="@+id/moveRegistQnA"
            android:background="#dc7f0d"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>